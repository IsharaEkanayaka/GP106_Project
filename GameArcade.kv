                font_size: "40sp"
                background_color: 1, 1, 1, 0.5
                on_release: root.on_button_click(btn3)

            Button:
                id: btn4
                text: ""
                font_size: "40sp"
                background_color: 1, 1, 1, 0.5
                on_release: root.on_button_click(btn4)

            Button:
                id: btn5
                text: ""
                font_size: "40sp"
                background_color: 1, 1, 1, 0.5
