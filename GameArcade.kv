        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Restart"
                font_size: "20sp"
                background_color: 0.7, 1, 0.11, 0.8
                on_release: root.restart_game()

            Button:
                text: "Back to Dashboard"
                background_color: 0.7, 1, 0.11, 0.8
                font_size: "20sp"
                on_release: app.root.current = "dashboard"

<TwoPlayersGameWindow>:
    name: "TwoPlayersGameWindow"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Rectangle:
                size: self.size
                source: "images/ttt.jpg"
        Label:
            id: my_label2
            text: "Two players Tic-Tac-Toe"
            color : 0,1,0,1
            font_name: "fonts/Lcd.ttf"
            font_size: "40dp"
            size_hint_y: 0.2
        BoxLayout:
            orientation: "vertical"
            Button:

                text: "Home"
                size_hint: None, None
                size: 200, 100
                pos_hint: {"center_x": 0.5}
                background_color: 1, 0, 0, 0.2
                font_size: "30dp"
                on_release:
                    app.root.current = "dashboard"
            Button:

                text: "start"
                size_hint: None, None
                size: 200, 100
                pos_hint: {"center_x": 0.5}
                background_color: 1, 0, 0, 0.2
                font_size: "30dp"
                on_release:
                    app.run_two_players()


