<HangmanLiteWindow>:
    name : "HangmanLiteWindow"
    Button:
        id:button_sq
        text :"Start"
        size_hint:0.3,0.15
        pos_hint:{"x":0.0,"y":0.0}
        on_press:root.Start_clicked()

    Button:
        text : 'Home'
        size_hint:0.3,0.15
        pos_hint:{"x":0.3,"y":0.0}
        on_press : app.root.current = "dashboard"


    Label:
        id:difficulty
        text:"Difficulty"
        size_hint:0.3,0.15
        pos_hint:{"x":0.7,"y":0.05}
    Spinner:
        id:diff_id
        text:"easy"
        size_hint:0.3,0.10
        pos_hint:{"x":0.7,"y":0.0}
        values:["easy","medium","hard"]
        on_text:root.Diff_set(diff_id.text)

<GameOverWindow>:
    name : "GameOverWindow"
    
    BoxLayout:
        orientation : "vertical"
        Image:
            source : "images/game_over.png"

        BoxLayout:
            orientation : "horizontal"
            Button:
                text : "Home"
                on_release: app.root.current = "dashboard"
                font_size : "25dp"
            Button:
                text : "Back"
                on_release: app.root.current = "PianoTilesWindow"
                font_size : "25dp"
    






