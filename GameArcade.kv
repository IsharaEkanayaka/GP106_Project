WindowManager:
    Dashboard:
    PianoTilesWindow:
    TicTacToeWindow:
    HangmanLiteWindow:

<Dashboard>:
    name : "dashboard"
    canvas.before:
        Rectangle:
            size : self.size
            source : "images/bg_d.jpg"
    BoxLayout:
        orientation : "vertical"
        Label:
            font_name : "fonts/Lcd.ttf"
            text : "DASHBOARD"
            font_size : "80dp"
            color : 0,1,0,1
        BoxLayout:
            orientation : "horizontal"
            Button:
                text : "Tic-Tac-Toe"
                font_size : "25dp"
                on_press : app.root.current = "TicTacToeWindow"
            Button:
                text : "Hangman-Lite"
                font_size : "25dp"
                on_press : app.root.current = "HangmanLiteWindow"
            Button:
                text : "Piano-Tiles"
                font_size : "25dp"
                on_press : app.root.current = "PianoTilesWindow"

<PianoTilesWindow>:
    name : "PianoTilesWindow"
    canvas.before:
        Rectangle:
            size : self.size
            source : "images/bg_d.jpg"
    BoxLayout:
        orientation : "vertical"
        Label:
            font_name : "fonts/Lcd.ttf"
            text : "PIANO TILES"
            font_size : "50dp"
            color : 0,1,0,1

        BoxLayout:
            orientation : "horizontal"
            Label:
                text : "Highest Score"
                font_size : "25dp"
            Label:
                id : _highestMarks
                text : root.pre_name
                font_size : "25dp"

        BoxLayout:
            orientation : "horizontal"
            Label:
                font_name : "fonts/Lcd.ttf"
                text : "---- PREVIOUS PLAYER ----"
                font_size : "30dp"
                color : 1,1,0,1

        BoxLayout:
            orientation : "horizontal"
            Label:
                text : "Name"
                font_size : "25dp"
            Label:
                id : _preName
                text : root.pre_name
                font_size : "25dp"

        BoxLayout:
            orientation : "horizontal"
            Label:
                text : "Score"
                font_size : "25dp"
            Label:
                id : _preScore
                text : str(root.pre_score)
                font_size : "25dp"

        BoxLayout:
            orientation : "horizontal"
            Label:
                font_name : "fonts/Lcd.ttf"
                text : "---- YOUR NAME ----"
                font_size : "30dp"
                color : 1,1,0,1

        BoxLayout:
            orientation : "horizontal"
            Label:
                text : "Your Name"
                font_size : "25dp"
            TextInput:
                text : ""
                multiline : False
                font_size : "25dp"
                on_text_validate : root.on_text_validate(self)

        BoxLayout:
            orientation : "horizontal"
            Button:
                text : "START"
                font_size : "25dp"
                on_press : root.start_game()
            Button:
                text : "HOME"
                font_size : "25dp"
                on_press : root.stop_piano()
                on_press : app.root.current = "dashboard"
    

<TicTacToeWindow>:
    name : "TicTacToeWindow"
    Button:
        text : 'Tic tac'


#:set checkboxPivot_x -0.45
#:set checkboxPivot_y 0.45

<HangmanLiteWindow>:
    name : "HangmanLiteWindow"
    Button:
        id:button_sq
        text :button_sqT
        size_hint:0.3,0.15
        pos_hint:{"x":0.0,"y":0.0}
        on_press:root.game_init()

    Button:
        text : 'Home'
        size_hint:0.3,0.15
        pos_hint:{"x":0.3,"y":0.0}
        on_press : app.root.current = "dashboard"


    Label:
        id:difficulty
        text:"Difficulty"
        size_hint:0.3,0.15
        pos_hint:{"x":0.7,"y":0.05}
    Spinner:
        id:diff_id
        text:"easy"
        size_hint:0.3,0.10
        pos_hint:{"x":0.7,"y":0.0}
        values:["easy","medium","hard"]
        on_text:root.Diff_set(diff_id.text)





