WindowManager:
    Dashboard:
    PianoTilesWindow:
    TicTacToeWindow:
    HangmanLiteWindow:
    SinglePlayerGameWindow:
    TwoPlayersGameWindow:
    GameOverWindow:

<Dashboard>:
    name : "dashboard"
    canvas.before:
        Rectangle:
            size : self.size
            source : "images/bg_d.jpg"
    BoxLayout:
        orientation : "vertical"
        Label:
            font_name : "fonts/Lcd.ttf"
            text : "DASHBOARD"
            font_size : "80dp"
            color : 0,1,0,1
        BoxLayout:
            orientation : "horizontal"
            Button:
                text : "Tic-Tac-Toe"
                font_size : "25dp"
                on_press : app.root.current = "TicTacToeWindow"
            Button:
                text : "Hangman-Lite"
                font_size : "25dp"
                on_press : app.root.current = "HangmanLiteWindow"
            Button:
                text : "Piano-Tiles"
                font_size : "25dp"
                on_press : app.root.current = "PianoTilesWindow"

<PianoTilesWindow>:
    name : "PianoTilesWindow"
    canvas.before:
        Rectangle:
            size : self.size
            source : "images/bg_d.jpg"
    BoxLayout:
        orientation : "vertical"
        Label:
            font_name : "fonts/Lcd.ttf"
            text : "PIANO TILES"
            font_size : "50dp"
            color : 0,1,0,1

        BoxLayout:
            orientation : "horizontal"
            Label:
                text : "Highest Score"
                font_size : "25dp"
            Label:
                id : _highestMarks
                text : root.pre_name
                font_size : "25dp"

        BoxLayout:
            orientation : "horizontal"
            Label:
                font_name : "fonts/Lcd.ttf"
                text : "---- PREVIOUS PLAYER ----"
                font_size : "30dp"
                color : 1,1,0,1

        BoxLayout:
            orientation : "horizontal"
            Label:
                text : "Name"
                font_size : "25dp"
            Label:
                id : _preName
                text : root.pre_name
                font_size : "25dp"

        BoxLayout:
            orientation : "horizontal"
            Label:
                text : "Score"
                font_size : "25dp"
            Label:
                id : _preScore
                text : str(root.pre_score)
                font_size : "25dp"

        BoxLayout:
            orientation : "horizontal"
            Label:
                font_name : "fonts/Lcd.ttf"
                text : "---- YOUR NAME ----"
                font_size : "30dp"
                color : 1,1,0,1

        BoxLayout:
            orientation : "horizontal"
            Label:
                text : "Your Name"
                font_size : "25dp"
            TextInput:
                text : ""
                multiline : False
                font_size : "25dp"
                on_text_validate : root.on_text_validate(self)

        BoxLayout:
            orientation : "horizontal"
            Button:
                text : "START"
                font_size : "25dp"
                on_press : root.start_game()
            Button:
                text : "HOME"
                font_size : "25dp"
                on_press : root.stop_piano()
                on_press : app.root.current = "dashboard"
    

<TicTacToeWindow>:
    name: "TicTacToeWindow"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Rectangle:
                size: self.size
                source: "images/ttt.jpg"

        Label:
            id:my_label
            font_name: "fonts/Lcd.ttf"
            text: "TIC-TAC-TOE"
            font_size: "85dp"
            size_hint: 1, 0.2

            pos_hint: {"top": 1}

        BoxLayout:
            orientation: "vertical"
            Button:

                text: "Home"
                size_hint: None, None
                size: 200, 100
                pos_hint: {"center_x": 0.5}
                background_color: 1, 0, 0, 0.2
                font_size: "30dp"
                on_release:
                    app.root.current = "dashboard"

            Button:
                text: "Single Player"
                size_hint: None, None
                size: 300, 150
                pos_hint: {"center_x": 0.5}
                background_color: 0, 0, 1, 0.2
                font_size: "30dp"
                on_release:
                    app.root.current = "SinglePlayerGameWindow"

            Button:
                text: "Two Players"
                size_hint: None, None
                size: 300, 150
                pos_hint: {"center_x": 0.5}
                background_color: 0, 0, 2, 0.2
                font_size: "30dp"
                on_release:
                    app.root.current = "TwoPlayersGameWindow"

